{
  "name": "@matstack/remix-adonisjs",
  "description": "An adapter for using Remix with AdonisJS",
  "version": "0.0.1",
  "engines": {
    "node": ">=18.16.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "src",
    "providers",
    "index.ts",
    "build/src",
    "build/providers",
    "build/stubs",
    "build/index.d.ts",
    "build/index.d.ts.map",
    "build/index.js"
  ],
  "exports": {
    ".": "./build/index.js",
    "./remix_provider": "./build/providers/remix_provider.js",
    "./types": "./build/src/types/main.js"
  },
  "scripts": {
    "build": "npm run compile",
    "clean": "del-cli build",
    "compile": "npm run clean && tsc",
    "copy:templates": "copyfiles \"stubs/**/**/*.stub\" build",
    "format": "prettier --write .",
    "lint": "eslint . --ext=.ts",
    "postcompile": "npm run copy:templates",
    "precompile": "npm run lint",
    "prepublishOnly": "npm run build",
    "pretest": "npm run lint",
    "quick:test": "node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "release": "np",
    "test": "c8 npm run quick:test",
    "typecheck": "tsc --noEmit",
    "version": "npm run build"
  },
  "dependencies": {
    "@poppinss/utils": "^6.5.0"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^6.1.3-25",
    "@adonisjs/core": "^6.1.5-29",
    "@adonisjs/eslint-config": "^1.1.8",
    "@adonisjs/prettier-config": "^1.1.8",
    "@adonisjs/tsconfig": "^1.1.8",
    "@japa/assert": "2.0.0",
    "@japa/runner": "3.0.4",
    "@swc/core": "^1.3.96",
    "@types/node": "^20.8.7",
    "c8": "^8.0.1",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.51.0",
    "np": "^8.0.4",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.1.5-29",
    "@remix-run/css-bundle": "^2.2.0",
    "@remix-run/dev": "^2.2.0",
    "@remix-run/node": "^2.2.0",
    "@remix-run/react": "^2.2.0",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependenciesMeta": {},
  "author": "Jarle Mathiesen <jarle.mathiesen@gmail.com>",
  "license": "MIT",
  "keywords": [
    "remix",
    "adonis",
    "adonisjs",
    "adonis-framework"
  ],
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}